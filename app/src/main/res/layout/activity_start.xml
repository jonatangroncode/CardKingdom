<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/BorjaspelaBtn"
        android:layout_width="405dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#9E221E"
        android:text="Börja spela"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        app:srcCompat="@drawable/clubs" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        app:srcCompat="@drawable/diamonds" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="261dp"
        android:layout_height="456dp"
        android:layout_marginTop="88dp"
        android:inputType="textMultiLine"
        android:text="Börja med att välja en av de 4:a valörena på nästa sida
        \n\n\nDu kan byta valör när du vill under spelets gång\n
        \nTryck sedan på nytt kort
        \n\nOm din valör stämmer överens med kortets valör får du 1 poäng
        \n\n När du fått 10 poäng har du vunnit!
        \n\nNästa runda kan du försöka få 10 poäng med mindre antal kort än rundan innan "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.618" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/text_view"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        app:srcCompat="@drawable/hearts" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        app:srcCompat="@drawable/spades" />


</androidx.constraintlayout.widget.ConstraintLayout>